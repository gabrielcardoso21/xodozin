{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd xodozin && yarn install --frozen-lockfile && yarn build"
  },
  "deploy": {
    "startCommand": "cd xodozin && yarn start",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
