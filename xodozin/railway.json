{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "yarn install && NODE_OPTIONS=--max-old-space-size=4096 yarn build"
  },
  "deploy": {
    "startCommand": "NODE_OPTIONS=--max-old-space-size=4096 yarn build && yarn start",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}

