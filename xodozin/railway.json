{
  "$schema": "https://railway.app/railway.schema.json",
  "$service": {
    "source": {
      "repo": "https://github.com/seu-usuario/xodozin",
      "branch": "main"
    }
  },
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "yarn install && yarn build"
  },
  "deploy": {
    "startCommand": "bash scripts/start-with-migrations.sh",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}

